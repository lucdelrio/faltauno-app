<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_partido"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="7dp"
    android:background="@color/colorWhite">

    <TableLayout
        android:id="@+id/table_principal"
        android:layout_width="292dp"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/fila_tamanio_cancha"
            android:layout_width="5dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/texto_tamanio_y_lugar"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/label_tamanio_cancha"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/label_tamanio_cancha"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:id="@+id/fila_fecha"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/texto_fecha_y_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp" />
        </TableRow>

        <TableRow
            android:id="@+id/fila_genero"
            android:layout_width="300dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/texto_genero_nivel"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp" />

        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:id="@+id/contenedor_cupo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="right">

        <TextView
            android:id="@+id/texto_cupo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorAccentGreen"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cupo_letra"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/texto_cupo"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/texto_cupo"
            android:layout_below="@id/texto_cupo"
            android:foregroundGravity="center"
            android:gravity="right"
            android:text="CUPO"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/cardview_dark_background"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>


</android.support.v7.widget.CardView>